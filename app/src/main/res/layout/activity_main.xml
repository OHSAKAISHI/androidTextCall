<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="readMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/readStart"
            app:layout_constraintTop_toBottomOf="@+id/readTextInput" android:layout_marginEnd="76dp"
            android:layout_marginBottom="39dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/NoUse"/>
    <Button
            android:text="NoUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NoUseBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/NoUse"
            android:layout_marginEnd="76dp" android:layout_marginBottom="160dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/NoUse"
            android:textIsSelectable="true"
            app:layout_constraintTop_toBottomOf="@+id/readStart" app:layout_constraintEnd_toEndOf="@+id/NoUseBtn"
            app:layout_constraintBottom_toTopOf="@+id/NoUseBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="5dp"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/readTextInput"

            android:layout_marginTop="75dp" android:layout_marginBottom="3dp"
            app:layout_constraintEnd_toEndOf="@+id/NoUse" app:layout_constraintBottom_toTopOf="@+id/readStart"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/NoUse"/>

</androidx.constraintlayout.widget.ConstraintLayout>